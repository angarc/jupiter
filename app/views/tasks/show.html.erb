<%= simple_form_for @task, url: project_task_list_task_path(@project, @task_list, @task) do |f| %>
  <%= f.input :title, disabled: true %>

  <%= f.association :users, collection: User.all, label_method: :full_name %>

  <div class='row'>
    <div class='col-lg-6'>
      <label>Start Date</label>
      <%= f.date_field :start_date, class: 'form-control', disabled: true %>
    </div>
    <div class='col-lg-6'>
      <label>End Date</label>
      <%= f.date_field :end_date, class: 'form-control', disabled: true %>
    </div>
  </div>

  <div class='mt-3'></div>

  <%= f.input :description, input_html: { rows: 7 }, disabled: true %>

  <%= f.input :private, disabled: true %>

  <%= f.input :complete, disabled: true %>

  <%= f.input :attachments, disabled: true %>

  <%= f.input :priority, collection: Task.priorities.keys, disabled: true %>
<% end %>

<%= link_to 'Back to All Tasks', project_path(@project) %>