<%= simple_form_for @task, url: project_task_list_task_path(@project, @task_list, @task) do |f| %>
  <%= f.input :title %>

  <div class='row'>
    <div class='col-lg-6'>
      <label>Start Date</label>
      <%= f.date_field :start_date, class: 'form-control' %>
    </div>
    <div class='col-lg-6'>
      <label>End Date</label>
      <%= f.date_field :end_date, class: 'form-control' %>
    </div>
  </div>

  <div class='mt-3'></div>

  <%= f.input :description, input_html: { rows: 7 } %>

  <%= f.input :private %>

  <%= f.input :complete %>

  <%= f.input :attachments %>

  <%= f.input :priority, collection: Task.priorities.keys %>

  <%= f.submit class: 'btn btn-md btn-primary'%>
<% end %>