  <body id="page-top">
    <div class='container'>
      <div class='row'>
        <div class='col-lg-8 offset-lg-2 flex-center-align'>
          <div class='card'>
            <div class='card-body'>
              <%= yield %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
