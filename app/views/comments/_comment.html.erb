<div class='comment' data-id='<%= comment.id %>'>
  <strong><%= comment.user.full_name %></strong>
  <div class='float-right'>
    <% if comment.user == current_user %>
      <%= link_to fa_icon('edit'), edit_project_task_list_task_comment_path(id: comment.id, task_id: @task.id), class: 'btn btn-sm btn-circular btn-info' %>
      <%= link_to fa_icon('trash'), project_task_list_task_comment_path(id: comment.id, task_id: @task.id), method: :delete, remote: true, class: 'btn btn-sm btn-danger btn-circular', data: { confirm: 'Are you sure you want to delete this comment?' } %>
    <% end %>
  </div>
  <%= comment.body %>
</div>
