<!-- Modal -->
<div class="modal fade" id="editTaskListModal" tabindex="-1" role="dialog" aria-labelledby="editTaskListModalTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="editTaskListModalTitle">Add a New Task List</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <%= simple_form_for task_list, remote: true, url: project_task_list_path(@project, task_list) do |f| %>
        <div class="modal-body">
          <%= f.input :name %>
        </div>
        <div class="modal-footer">
          <button type="button" class="close-modal-button btn btn-secondary" data-dismiss="modal">Close</button>
          <%= f.submit 'Update', class: 'btn btn-md btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<script>
  $(function() {
    $('#editTaskListModal').on('hidden.bs.modal', function (e) {
      $(this).remove()
    })
  })
</script>